{
  "kind": "collectionType",
  "collectionName": "dashboard_tiles",
  "info": {
    "singularName": "dashboard-tile",
    "pluralName": "dashboard-tiles",
    "displayName": "Dashboard Tile"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "backgroundColor": {
      "type": "string",
      "minLength": 7,
      "maxLength": 9,
      "regex": "^#(?:[0-9A-Fa-f]{6}|[0-9A-Fa-f]{8})$"
    }
  }
}
